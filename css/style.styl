// CUSTOMIZE THE CAROUSEL
// Carousel base class
.carousel
  margin-bottom 4rem
  &-shadow
    background-color rgba(dark_blue,.4)
    position absolute
    width 100%
    height 100%

// Since positioning the image, we need to help out the caption
