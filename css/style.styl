// MIXINS
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

boxShadow(hLength, vLength="", blur="", spread="", rgba-color="", inst=false)
  if hLength!=none
    if inst
      -webkit-box-shadow inset hLength vLength blur spread rgba-color
      -moz-box-shadow inset hLength vLength blur spread rgba-color
      box-shadow inset hLength vLength blur spread rgba-color
    if inst==false
      -webkit-box-shadow hLength vLength blur spread rgba-color
      -moz-box-shadow  hLength vLength blur spread rgba-color
      box-shadow hLength vLength blur spread rgba-color
    else
      -webkit-box-shadow none
      -moz-box-shadow  none
      box-shadow none

